<h1>String Calculator</h1>

<%= form_with url: string_calculator_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :numbers, "Enter numbers:" %>
    <%= form.text_field :numbers, value: params[:numbers] %>
  </div>

  <div>
    <%= form.submit "Calculate" %>
  </div>
<% end %>

<% if @result %>
  <h2>Result: <%= @result %></h2>
<% elsif @error %>
  <h2>Error: <%= @error %></h2>
<% end %>
